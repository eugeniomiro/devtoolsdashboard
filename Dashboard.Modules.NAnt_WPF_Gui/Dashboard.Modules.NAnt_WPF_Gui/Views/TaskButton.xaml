<Dashboard:ViewControl x:Class="Techno_Fly.Tools.Dashboard.Modules.NAnt_WPF_Gui.Views.TaskButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
     xmlns:Data="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
     xmlns:Dashboard="clr-namespace:Techno_Fly.Tools.Dashboard;assembly=Dashboard.Infrastructure"
    >
    <Grid>
        <ribbon:RibbonToggleButton Name="NAnt_WPF_GuiButton" IsThreeState="False" LargeImageSource="..\Ant.ico" Label="NAnt Gui" Command="{Data:Binding ShowModuleView}" IsChecked="{Binding Path=IsChecked}" />
    </Grid>
</Dashboard:ViewControl>
